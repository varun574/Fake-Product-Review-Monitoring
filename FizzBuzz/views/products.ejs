<!DOCTYPE html>
<html>
  <head>
    <title>FizzBuzz</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body >
  <%- include('header')-%>
  <div style="padding: 100px;">
  <% if(message){%>
  <h2 class="text-danger"><%= message%></h2>
  <%}%>
  <% if(products.length!==0) {%>
    <div class="row">
    <% products.forEach((product)=>{%>
        <div class="col-4 mb-5" >
            <div class="card">
                <div class="card-header" style="height: 250px; width: auto;">
                  <!-- <img src="<%= product.image%>" onerror="this.onerror=null; this.src='/images/defualtproduct.jpeg'" alt="Image unavailable" width="100%" height="100%"> -->
                </div>
                  <div class="card-body">
                    <h4><%= product.product_name%></h4>
                    <% if(product.stock===0){%>
                      <small class="text-danger"><strong>Out of Stock</strong></small>
                    <% }else{%>
                      <small class="text-success"><strong>In stock</strong></small>
                    <%}%>
                  </div>
                <div class="card-footer">
                    <h6 style="display: inline;"><%= product.price %>â‚¹</h6>
                    <a href="/product/<%= product.product_name%>" style="float: right;" class="btn btn-success">View</a>
                </div>
            </div>
        </div>
    <%})  
  }%>
    </div>
  </div>
  <%- include('footer') -%>
  </body>
</html>