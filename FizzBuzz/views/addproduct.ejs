<!DOCTYPE html>
<html>
  <head>
    <title>FizzBuzz</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
  <%- include('header')-%> 
  <form action="/addproduct" method="post" enctype="multipart/form-data">
    <div>
        <input type="hidden" name="token" id="token">
    </div>
    <div class="mb-3 mt-3">
      <label for="product_name" class="form-label">Product Name :</label>
      <input type="text" class="form-control" id="product_name" placeholder="Enter Product Name" name="product_name">
      <% if(product_nameerr.length!==0) {
        nameerr.forEach(err=>{
          %>
          <small style="color: red;">*<%= err %></small>
          <%
        })
        %>
      <%}%>
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price :</label>
      <input type="text" class="form-control" id="price" placeholder="Enter Price" name="price">
      <% if(priceerr.length!==0) {
        priceerr.forEach(err=>{
          %>
          <small style="color: red;">*<%= err %></small>
          <%
        })
        %>
      <%}%> 
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description :</label>
        <input type="text" class="form-control" id="description" placeholder="Enter Description" name="description">
        <% if(descriptionerr.length!==0) {
          descriptionerr.forEach(err=>{
            %>
            <small style="color: red;">*<%= err %></small>
            <%
          })
          %>
        <%}%> 
    </div>
    <div class="mb-3">
      <label for="category">Choose a Category:</label>
      <select name="category" id="category">
        <option value="Select Category">Select Category</option>
        <option value="Electronics">Electronics</option>
        <option value="Video Games">Video Games</option>
        <option value="Appliances">Appliances</option>
        <option value="Furniture">Furniture</option>
        <option value="Books">Books</option>
      </select>
      <% if(categoryerr.length!==0) {
        categoryerr.forEach(err=>{
          %>
          <small style="color: red;">*<%= err %></small>
          <%
        })
        %>
      <%}%> 
    </div>
    <div class="mb-3">
      <label for="stock" class="form-label">Stock :</label>
      <input type="number" class="form-control" id="stock" placeholder="Enter available stock" name="stock">
      <% if(stockerr.length!==0) {
        stockerr.forEach(err=>{
          %>
          <small style="color: red;">*<%= err %></small>
          <%
        })
        %>
      <%}%> 
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Updload Product Image :</label>
        <input type="file" class="form-control-file" id="image"  name="image">
        <% if(imageerr.length!==0) {
          imageerr.forEach(err=>{
            %>
            <small style="color: red;">*<%= err %></small>
            <%
          })
          %>
        <%}%> 
    </div>
    <input type="submit" class="btn btn-primary">Add Product</button>
  </form>
  <script>
      document.getElementById("token").value = localStorage.getItem('token')
  </script>
  <%- include('footer') -%>
  </body>
</html>